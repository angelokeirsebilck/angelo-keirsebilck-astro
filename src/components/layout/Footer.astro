    <div class="col-span-full lg:col-span-6 mt-0 lg:mt-10">
      <div class="text-3xl text-white font-bebas mb-6">Menu</div>
      <ul class="columns-2">
        {
          navListNL.map((link) => (
            <li class="mb-2">
              <a
                class=" text-white transition-colors duration-300 hover:text-pink-default"
                href={link.uri}
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="col-span-full lg:col-span-6 mt-0 lg:mt-10">
