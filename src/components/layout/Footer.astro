---
import logo from "@assets/svg/angelo-keirsebilck-web-dev-white.svg";
import Container from "@components/base/Container.astro";

const url = Astro.url;
const [, locale] = url.pathname.split("/");

const navListNL = [
  {
    uri: "/nl",
    label: "Home",
  },
  {
    uri: "/nl/projecten",
    label: "Projecten",
  },
  {
    uri: "/nl/werkwijze",
    label: "Werkwijze",
  },
  {
    uri: "/nl/contact",
    label: "Contact",
  },
];
