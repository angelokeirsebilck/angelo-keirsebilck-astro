---
import type { LinkType } from "@custom-types/ui";
import Link from "@components/ui/Link.astro";
import Container from "@components/base/Container.astro";

export interface Props {
  title: string;
  link: LinkType;
  text: string;
  noMT: boolean;
}

const { title, text, link, noMT } = Astro.props;
---

<Container bgColor={"white"} extraClasses={noMT ? "!mt-0" : ""}>
  <div class="default-grid pb-3">
    <div
      class="col-span-full relative lg:col-start-4 lg:col-span-12 rounded-20 neo-brutal-border after:bg-white after:z-10"
    >
      <div
        class="bg-pink-default border-4 w-[calc(100%_-_12px)] flex flex-col items-center p-10 relative z-20 rounded-20 border-black-default"
      >
        <div
          class="flex flex-col items-center prose prose-custom max-w-2xl text-center mx-auto"
        >
          <h2>{title}</h2>
          <p class="text-2xl">
            {text}
          </p>
        </div>
        <div class="mt-12 flex">
          <Link link={link} />
        </div>
      </div>
    </div>
  </div>
</Container>
